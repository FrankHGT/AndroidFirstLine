<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/re_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Button 3" />

    <Button
        android:id="@+id/re_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/re_button3"
        android:layout_toLeftOf="@+id/re_button3"
        android:text="Button 1" />

    <Button
        android:id="@+id/re_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/re_button3"
        android:layout_toRightOf="@+id/re_button3"
        android:text="Button 2" />

    <Button
        android:id="@+id/re_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_button3"
        android:layout_toLeftOf="@+id/re_button3"
        android:text="Button 4" />

    <Button
        android:id="@+id/re_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_button3"
        android:layout_toRightOf="@+id/re_button3"
        android:text="Button 5" />

</RelativeLayout>